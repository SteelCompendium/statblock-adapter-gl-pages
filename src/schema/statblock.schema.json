{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "statblock.schema.json",
  "title": "Draw Steel Statblock",
  "description": "A creature statblock for a Draw Steel.",
  "type": "object",
  "required": [
    "name",
    "roles",
    "ancestry",
    "ev",
    "stamina",
    "speed",
    "size",
    "stability",
    "free_strike",
    "might",
    "agility",
    "reason",
    "intuition",
    "presence"
  ],
  "additionalProperties": false,
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the creature."
    },
    "level": {
      "type": "integer",
      "description": "The creature's level.",
      "default": 0
    },
    "roles": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Roles assigned to the creature (e.g., Boss, Minion).",
      "default": []
    },
    "ancestry": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Ancestries or types the creature belongs to (e.g., Human, Humanoid).",
      "default": []
    },
    "ev": {
      "type": "string",
      "description": "Encounter Value (EV) of the creature.",
      "default": "0"
    },
    "stamina": {
      "type": "integer",
      "description": "The creature's max stamina.",
      "default": 0
    },
    "immunities": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of immunities (e.g., Magic 2, Psionic 2).",
      "default": []
    },
    "speed": {
      "type": "string",
      "description": "Movement speed of the creature, may include parenthetical modifiers (e.g., '5 (climb)').",
      "default": ""
    },
    "size": {
      "type": "string",
      "description": "Size category (e.g., 1M for medium).",
      "default": ""
    },
    "stability": {
      "type": "integer",
      "description": "Stability value of the creature.",
      "default": 0
    },
    "free_strike": {
      "type": "integer",
      "description": "The free strike value.",
      "default": 0
    },
    "might": {
      "type": "integer",
      "description": "Might modifier.",
      "default": 0
    },
    "agility": {
      "type": "integer",
      "description": "Agility modifier.",
      "default": 0
    },
    "reason": {
      "type": "integer",
      "description": "Reason modifier.",
      "default": 0
    },
    "intuition": {
      "type": "integer",
      "description": "Intuition modifier.",
      "default": 0
    },
    "presence": {
      "type": "integer",
      "description": "Presence modifier.",
      "default": 0
    },
    "with_captain": {
      "type": "string",
      "description": "Effect when a captain is present."
    },
    "traits": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/trait"
      },
      "description": "Special traits of the creature.",
      "default": []
    },
    "abilities": {
      "type": "array",
      "items": {
        "$ref": "ability.schema.json#"
      },
      "description": "List of abilities (see Ability schema).",
      "default": []
    }
  },
  "definitions": {
    "trait": {
      "type": "object",
      "required": [
        "name",
        "effect"
      ],
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the trait."
        },
        "type": {
          "type": "string",
          "description": "Optional action-type of the trait (e.g., Maneuver)."
        },
        "effect": {
          "type": "string",
          "description": "Description of the trait's effect."
        }
      }
    }
  }
}